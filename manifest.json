{
    "manifest_version": 2,
    "name": "Miiniimaal Weather",
    "description": "Display weather in a minimal way",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "geolocation",
        "activeTab",
        "storage",
        "clipboardWrite"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}